.box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.circle{
  width: 100%;
  height: 550rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.circle view{
  width: 400rpx;
  height: 400rpx;
  background-color: #73737E;
  box-shadow: 0px 2px 20px #73737E;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.circle view image{
  width: 90%;
  height: 90%;
}

.title{
  margin: 60rpx 0;
  color: #636060;
  font-size: 46rpx;
}

.timeupdate{
  width: 85%;
  margin-bottom: 100rpx;
}

.timeupdate>view{
  display: flex;
  flex-direction: column;
}

.timeupdate>view>view{
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #636060;
  padding: 0 35rpx;
  box-sizing: border-box;
}

.playBox{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.play,.stop{
  width: 67rpx;
  height: 80rpx;
}

.audioSplit{
  width: 2rpx;
  height: 100%;
  margin: 0 60rpx;
}

.pre,.next{
  width: 114rpx;
  height: 60rpx;
}
