/**index.wxss**/
page{
  overflow-y: auto;
}

.message{
  width: 100%;
  margin: auto;
}

.nav{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.nav image{
  width: 100rpx;
  height: 100rpx;
  /* border: 1px solid #000; */
}

.nav .navList{
  width: 33%;
  margin-bottom: 20rpx;
}

.nav .navList .tap{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.nav .navList .tap .count{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background-color: #FC035D;
  border-radius: 50%;
  right: 75rpx;
  top: 0;
}

.nav .navList .tap text{
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #2f138d;
}

swiper{
  height: 360rpx;
}

swiper-item image{
  width: 100%;
}

.split{
  width: 100%;
  height: 60rpx;
  background-color: rgba(0, 191, 255, .5)
}

button::after{
  border: none;
}

button{
  background-color: #ffffff;
  outline-color: #ffffff;
  padding: 0;
}

button:hover{
  background-color: #ffffff;
}

.bigForm{
  display: block;
  width: 100%;
  height: 100%;
  padding: 0;
}
